<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ArchiveUI"
            prefHeight="1000" prefWidth="1000">
    <children>
        <!--标题-->
        <HBox prefHeight="100.0" prefWidth="1000.0" styleClass="title-pane" alignment="CENTER">
            <Label text="Archive" />
        </HBox>
        <!--存档显示板-->
        <AnchorPane fx:id="upperPane" layoutX="0.0" layoutY="100.0" prefHeight="600.0" prefWidth="1000.0" styleClass="custom-pane">

        </AnchorPane>
        <AnchorPane fx:id="downerPane" layoutX="0.0" layoutY="700.0" prefHeight="400.0" prefWidth="1000.0" styleClass="custom-pane">
            <children>
                <VBox fx:id="userInfoPane" layoutX="30.0" layoutY="30.0" styleClass="">
                    <HBox>
                        <Label fx:id="userName" text="User Name" />
                    </HBox>
                    <HBox>
                        <Label fx:id="userScoreTitle" text="Best Score: " />
                        <Label fx:id="userScore" text="0" />
                    </HBox>
                    <HBox>
                        <Label fx:id="userTotalGameTitle" text="Total Games: " />
                        <Label fx:id="userTotalGameCount" text="0" />
                    </HBox>
                    <HBox>
                        <Label fx:id="userTotalWinTitle" text="Total Wins: " />
                        <Label fx:id="userTotalWinCount" text="0" />
                    </HBox>
                    <HBox>
                        <Label fx:id="userTotalLoseTitle" text="Total Loses: " />
                        <Label fx:id="userTotalLoseCount" text="0" />
                    </HBox>
                </VBox>
                <!--存档路径选择框-->
                <VBox fx:id="userInfoPane" layoutX="500.0" layoutY="30.0" styleClass="">
                    <HBox>
                        <Label text="Choose Archive Path" />
                        <TextField fx:id="archivePath" />
                        <Button fx:id="chooseArchivePath" text="Confirm" />
                    </HBox>
                    <Label fx:id="pathCheckOutput" text="Please choose a valid path" />
                </VBox>
                <!--退出按钮-->
                <Button fx:id="exitButton" layoutX="730.0" layoutY="300.0" text="Exit" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
