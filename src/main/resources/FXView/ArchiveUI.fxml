<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ArchiveUI"
            prefHeight="1000" prefWidth="1000">
    <children>
        <AnchorPane fx:id="upperPane" layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="1000.0" styleClass="custom-pane">
            <children>
                <Label fx:id="title" alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="100.0" prefWidth="600.0" styleClass="title-style" text="ARCHIVE" />
            </children>
        </AnchorPane>
        <AnchorPane fx:id="downerPane" layoutX="0.0" layoutY="600.0" prefHeight="400.0" prefWidth="1000.0" styleClass="custom-pane">
            <children>
                <AnchorPane fx:id="userInfoPane" layoutX="30.0" layoutY="30.0" styleClass="">
                    <HBox>
                        <Label fx:id="userName" text="User Name" />
                        <Label fx:id="userScore" text="Score" />
                        <Label fx:id="userStep" text="Step" />
                        <Label fx:id="userTime" text="Time" />
                    </HBox>
                </AnchorPane>
                <AnchorPane>
                    <TableView fx:id="archiveTable" layoutX="30.0" layoutY="100.0" prefHeight="300.0" prefWidth="940.0">
                        <columns>
                            <TableColumn fx:id="userNameColumn" prefWidth="235.0" text="User Name" />
                            <TableColumn fx:id="userScoreColumn" prefWidth="235.0" text="Score" />
                            <TableColumn fx:id="userStepColumn" prefWidth="235.0" text="Step" />
                            <TableColumn fx:id="userTimeColumn" prefWidth="235.0" text="Time" />
                        </columns>
                    </TableView>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
